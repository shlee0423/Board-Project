<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.mapper.BoardMapper">
    <update id="updateBoard">
        UPDATE `board`
        SET
            `title` = #{title},
            `content` = #{content},
            `is_opened` = #{isOpened},
            `password` = #{password}
        WHERE `no` = #{no}
    </update>
    <delete id="deleteBoard">
        DELETE FROM `board` WHERE `no` = #{no}
    </delete>
    <select id="selectBoards" resultType="com.board.dto.BoardDTO">
        SELECT * FROM `board` ORDER BY `no` DESC
    </select>
    <select id="selectBoardByNo" resultType="com.board.dto.BoardDTO">
        SELECT * FROM `board` WHERE `no`= #{no}
    </select>

    <insert id="insertBoardPost">
        INSERT INTO `board`
        (`no`, `title`, `writer`, `content`, `is_opened`, `password`)
        VALUES
        (NULL, #{title}, #{writer}, #{content}, #{isOpened}, #{password})
    </insert>
</mapper>